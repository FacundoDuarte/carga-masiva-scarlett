      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "node",
      "lib": ["esnext"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@utils/*": ["../../packages/utils/*"]
