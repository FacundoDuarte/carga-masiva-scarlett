{
  "include": [
    "src/**/*.mts",
    "src/**/*.ts",
    "../../packages/utils/**/*.ts",
    "src/get-upload-url.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    // "lib": ["ESNext"],
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "/opt/utils/*": ["../../packages/utils/src/*"],
      "/opt/utils/index.js": ["../../packages/utils/src/index.ts"]
    },
    "baseUrl": "."
  }
}
