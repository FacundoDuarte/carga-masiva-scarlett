{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["es2017", "dom"],
    // "declaration": true,
    "rootDir": "./",
    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      // "@types/*": ["src/types/*"],
      "@utils/*": ["utils/*"],
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"]
    },
    "jsx": "react"
  },
  // "include": ["src/**/*", "utils/**/*", "static/frontend/src/**/*"],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
