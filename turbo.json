{
    "$schema": "https://turbo.build/schema.json",
    "globalEnv": [
        "AWS_PROFILE",
        "AWS_REGION",
        "APP_ID"
    ],
    "tasks": {
        "build": {
            "cache": false,
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".aws_sam/**",
                "build/**"
            ],
            "inputs": [
                "src/**/*.tsx",
                "src/**/*.ts",
                "template.yml"
            ]
        },
        "deploy:sam": {
            "cache": false,
            "inputs": [
                "template.yml",
                "sam-config-dev.toml"
            ],
            "outputs": [
                ".env"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {},
        "test": {}
    }
}