{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["es2017", "dom"],
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    // "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    // "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@types/*": ["utils/types/*"],
      "@utils/*": ["utils/*"],
      "@src/*": ["src/*"]
    },
    "jsx": "react"
  },
  "include": ["src/**/*", "utils/**/*", "static/**/*"],
  "exclude": ["node_modules", "static/**/build", "dist"]
}
