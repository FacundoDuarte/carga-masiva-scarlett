{
  "extends": "./tsconfig.ref.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES2022",
    "rootDir": ".",
    "paths": {
      "utils/*": ["./packages/utils/*"],
      "utils": ["./packages/utils/index.ts"], 
      "@src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.mts", "src/**/*.ts"],
  "exclude": ["node_modules", "static/**/build", "dist"],
  "references": [
    {"path": "./packages/utils/tsconfig.json"},
    {"path": "./packages/web/tsconfig.json"}
  ]
}
